#include <stdio.h>

int main(){
    int n;
    char l;
    scanf("%d %c", &n, &l);
    for (int i=1; i <=n-1; i++) {
         for (int j=1; j <=n ; j++) {
            if (j==i | j==n-i){
                printf("%c",l);   
            } else{
                printf(" "); 
            }
        }
        printf("\n");
    }
}